<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.HomeLibrary.DefaultButton">
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/grey</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Base.Theme.HomeLibrary.FavoriteButton" parent="Base.Theme.HomeLibrary.DefaultButton">
        <item name="backgroundTint">@android:color/holo_red_light</item>
        <item name="android:text">@string/app_book_favorite</item>
        <item name="android:drawableLeft">@drawable/favorite_24dp_fill0_wght400_grad0_opsz24</item>
        <item name="drawableTint">@android:color/white</item>
    </style>

    <style name="Base.Theme.HomeLibrary.FavoriteButtonActive" parent="Base.Theme.HomeLibrary.DefaultButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@android:color/holo_red_light</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:text">@string/app_book_favorite_active</item>
        <item name="android:drawableLeft">@drawable/favorite_24dp_fill0_wght400_grad0_opsz24</item>
        <item name="drawableTint">@android:color/holo_red_light</item>
    </style>

    <style name="Base.Theme.HomeLibrary.AuthorizationField">
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <!--        <item name="android:color">@android:color/transparent</item>-->
    </style>

    <style name="Widget.Theme.HomeLibrary.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>
</resources>